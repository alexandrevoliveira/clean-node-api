{
  "name": "clean-node-api",
  "version": "3.1.0",
  "description": "NodeJs Rest API and GraphQL using TDD, Clean Architecture, Typescript and Design Patterns",
  "author": "Alexandre Oliveira",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/alexandrevoliveira/clean-node-api",
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "tsc:watch": "tsc -w -p tsconfig-build.json",
    "check": "npm-check -s -u",
    "lint": "eslint '**/*.{ts,js}'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.36",
    "@types/faker": "^5.5.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "bson-objectid": "^2.0.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^5.0.4",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.5",
    "apollo-server-express": "^3.12.0",
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.2",
    "husky": "^8.0.3",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongo-round": "^1.0.0",
    "mongodb": "^5.9.0",
    "nodemon": "^3.0.1",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
